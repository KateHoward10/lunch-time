<div class="flex flex-row justify-between mb-2">
  <h2 class="text-xl">Users in <%= current_user.organisation.name %></h2>
  <%= link_to new_user_path, class: "bg-teal-400 text-white rounded p-1" do %>
    <%= fa_icon "plus" %> New user
  <% end %>
</div>
<ul class="grid md:grid-cols-2 lg:grid-cols-3 gap-2">
  <% @users.each do |u| %>
    <li class="rounded shadow-lg p-2 bg-white flex flex-row justify-between">
      <%= u.name || u.email %>
      <% if u.try(:admin?) %>
        <span><%= fa_icon "user" %> Admin</span>
      <% end %>
    </li>
  <% end %>
</ul>